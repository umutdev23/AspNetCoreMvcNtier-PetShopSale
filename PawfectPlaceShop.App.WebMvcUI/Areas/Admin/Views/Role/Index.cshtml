@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" asp-controller="Role" asp-area="Admin">Yeni Rol Tanımlama</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Role" asp-route-id="@item.Id" asp-area="Admin">Edit</a>
                        @* <a asp-action="Delete" asp-controller="Role" asp-route-id="@item.Id" asp-area="Admin">Delete</a> *@
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    <div class="alert alert-danger text-center">
                        Kayıtlı rol bulunmamaktadır.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>