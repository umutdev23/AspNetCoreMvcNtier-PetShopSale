<section class="latest-product spad" style="margin-bottom: 25px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="latest-product__text">
                    <h4>Son Eklenenler</h4>
                    <div class="latest-product__slider owl-carousel">
                        @for (int i = 0; i < ViewBag.LastProduct.Count; i += 3)
                        {
                            <div class="latest-product__slider__item">
                                @for (int j = i; j < i + 3 && j < ViewBag.LastProduct.Count; j++)
                                {
                                    var product = ViewBag.LastProduct[j];

                                    <a asp-controller="Product" asp-action="Details" asp-route-productId="@product.Id" class="latest-product__item">

                                        <div class="latest-product__item__pic">
                                            <img  src="@product.ImageUrl" alt="@product.Name">
                                        </div>
                                        <div class="latest-product__item__text">

                                            <h6>@product.Name</h6>

                                            <span>@string.Format("{0:C}", product.Price)</span>
                                        </div>
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="latest-product__text">
                    <h4>Çok Satanlar</h4>
